#!/bin/bash

/opt/anaconda/bin/conda env remove -y --name test
/opt/anaconda/bin/conda create -y -n test python
source /opt/anaconda/bin/activate test

VERSION=`grep -o 'version.*' setup.py | cut -c 10-13`
sha1=`git rev-parse HEAD`
sed "s/version.*/version=\"$VERSION$BUILD_NUMBER\", # git commit sha1 hash: $sha1/" setup.py > tmp && mv tmp setup.py

python setup.py sdist upload -r savvy
